{
  "hosting": [
    {
      "target": "corecircle-website-staging",
      "predeploy": ["yarn build"],
      "cleanUrls": true,
      "public": "dist",
      "headers": [
        {
          "source": "/api{,/**}",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "no-store"
            }
          ]
        },
        {
          "source": "**/*.@(html|js|css|webp|jpg|jpeg|gif|png|svg|ico|eot|ttf|woff|woff2|txt)",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "max-age=31536000"
            },
            {
              "key": "Content-Encoding",
              "value": "br"
            }
          ]
        }
      ],
      "ignore": ["firebase.json", "**/.*", "**/node_modules/**"]
    },
    {
      "target": "ginmebel",
      "public": "dist",
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "rewrites": [
        {
          "source": "**",
          "destination": "/index.html"
        }
      ],
      "headers": [
        {
          "source": "**/*.@(js|css|jpg|jpeg|gif|png|svg|ico|eot|ttf|woff|txt)",
          "headers": [
            {
              "key": "Cache-Control",
              "value": "max-age=31536000"
            },
            {
              "key": "Content-Encoding",
              "value": "gzip"
            }
          ]
        }
      ]
    }
  ]
}
